package it.radimage.argo.modules.screens;

import it.radimage.argo.beans.NavigationStackBean;
import it.radimage.argo.beans.RicercaDicomBean;
import it.radimage.argo.utils.ArgoRunData;
import org.apache.turbine.util.uri.TemplateURI;
import org.apache.velocity.context.Context;

/**
 * Controllore per Ricerca.vm.
 *
 * @author Nicola De Nisco
 */
public class Ricerca extends ArgoBaseScreen
{
  @Override
  protected void doBuildTemplate2(ArgoRunData data, Context context) throws Exception
  {
    super.doBuildTemplate2(data, context);

    NavigationStackBean.removeFromSession(data);
    NavigationStackBean nsb = NavigationStackBean.getFromSession(data);
    TemplateURI uri = new TemplateURI(data, "Ricerca.vm");
    nsb.push(uri.getRelativeLink());

    RicercaDicomBean bean = RicercaDicomBean.getFromSession(data);
    context.put("bean", bean);
    context.put("htmlRicerca", bean.getHtmlRicerca(data));
  }
}
