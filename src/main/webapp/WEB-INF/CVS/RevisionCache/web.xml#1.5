<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">


  <session-config>
    <session-timeout>15</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>pgm/Login.vm</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>argo</servlet-name>
    <servlet-class>it.radimage.argo.servlets.TurbineArgoServlet</servlet-class>
    <init-param>
      <param-name>applicationRoot</param-name>
      <param-value>webContext</param-value>
    </init-param>
    <init-param>
      <param-name>properties</param-name>
      <param-value>/WEB-INF/conf/TurbineResources.properties</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>it.radimage.argo.servlets.logout</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>pdfmaker</servlet-name>
    <servlet-class>it.radimage.argo.servlets.pdfmaker</servlet-class>
    <load-on-startup>3</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>MonitorComStrumenti</servlet-name>
    <servlet-class>it.radimage.argo.servlets.MonitorComStrumenti</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RigelDirectHtml</servlet-name>
    <servlet-class>it.radimage.argo.servlets.RigelDirectHtml</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ImmaginiRadiologia</servlet-name>
    <servlet-class>it.radimage.argo.servlets.ImmaginiRadiologia</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ThumbGrafici</servlet-name>
    <servlet-class>it.radimage.argo.servlets.ThumbGrafici</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ImmaginiGrafici</servlet-name>
    <servlet-class>it.radimage.argo.servlets.ImmaginiGrafici</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DcmImage</servlet-name>
    <servlet-class>it.radimage.argo.servlets.DcmImage</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>pdfmaker</servlet-name>
    <url-pattern>/pdf/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>argo</servlet-name>
    <url-pattern>/pgm/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MonitorComStrumenti</servlet-name>
    <url-pattern>/monitor/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RigelDirectHtml</servlet-name>
    <url-pattern>/rigel/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ImmaginiRadiologia</servlet-name>
    <url-pattern>/imgrad/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ThumbGrafici</servlet-name>
    <url-pattern>/thgrf/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ImmaginiGrafici</servlet-name>
    <url-pattern>/imggrf/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DcmImage</servlet-name>
    <url-pattern>/Image.do</url-pattern>
  </servlet-mapping>
</web-app>
