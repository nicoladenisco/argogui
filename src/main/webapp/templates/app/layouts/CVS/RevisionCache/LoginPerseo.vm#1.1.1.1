<!DOCTYPE html>
<html lang="en">
  <head>
    $navigation.setTemplate("CommonHead.vm")

    <SCRIPT type="text/javascript">
      $data.getFormScript()
    </SCRIPT>
  </head>

  <body role="document">
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="$link.setPage('LoginPerseo.vm')">$ui.productMenuName</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <form name="fo" method="post" action="$link.setAction('PcsdmLogin')" class="navbar-form navbar-right">
            <div class="form-group">
              <input type="text" placeholder="Utente" class="form-control" name="username">
            </div>
            <div class="form-group">
              <input type="password" placeholder="Password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-success">Sign in</button>
            <input type="hidden" name="resx">
            <input type="hidden" name="resy">

            <script language="javascript">
              document.fo.resx.value = screen.width;
              document.fo.resy.value = screen.height;
            </script>
          </form>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">

      #if($data.getMessage())
      <div class="alert alert-danger" role="alert">
        <div style="padding-left: 120px; padding-right: 120px;">$data.getMessage()</div>
      </div>
      #end

      <div class="container">
        <h1>PERSEO Advanced LAS</h1>
        <h2>Laboratory Automation System</h2>
        <p>$I.I("Gestione degli strumenti di chimica clinica.")</p>
        <p><a class="btn btn-primary btn-lg" href="https://www.infomedica.it/perseo/" role="button">$I.I("Per saperne di pi√π") &raquo;</a></p>
      </div>
    </div>

    <div class="container">

      $screen_placeholder

      <footer>
        $navigation.setTemplate("DefaultBottom.vm")
      </footer>
    </div>

  </body>
</html>
